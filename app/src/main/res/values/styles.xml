<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- アクションモード -->
        <item name="windowActionModeOverlay">true</item>
        <!-- プライマリカラー -->
        <item name="colorPrimary">#00897B</item>
        <!-- ステータスバーの背景色 -->
        <item name="android:colorPrimaryDark">@color/red_title</item>
    </style>


    <!-- Buttons -->
    <style name="Button.Solid" parent="Widget.MaterialComponents.Button" />
    <style name="Button.Transparent" parent="Widget.MaterialComponents.Button.TextButton" />
    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Button.Solid.Curve">
        <item name="cornerRadius">28dp</item>
    </style>

    <style name="Button.Transparent.Rounded">
        <item name="cornerRadius">5dp</item>
    </style>

</resources>