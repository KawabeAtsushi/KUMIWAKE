<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_img">
<ScrollView
    android:id="@+id/kumiwake_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/kumiwake_result"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:background="@drawable/red_text_background"/>

    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/re_kumiwake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/simple_red_button"
        android:text="@string/re_kumiwake"/>

        <Button
            android:id="@+id/go_sekigime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/simple_orange_button"
            android:text="@string/go_sekigime"/>

        <Button
            android:id="@+id/go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/simple_green_button"
            android:text="@string/go_home"/>
    </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        ads:adUnitId="ca-app-pub-2315101868638564/8665451539"
        ads:adSize="BANNER">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>