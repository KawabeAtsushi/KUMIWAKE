<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/kumiwake_select_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:backgroundTint="@color/red_unpressed"
        android:text="@string/kumiwake"
        android:textColor="@android:color/white"
        android:gravity="bottom|center"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sekigime_select_button"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/img_kumiwake_icon"
        app:layout_constraintTop_toTopOf="@id/kumiwake_select_button"
        app:layout_constraintBottom_toBottomOf="@id/kumiwake_select_button"
        app:layout_constraintStart_toStartOf="@id/kumiwake_select_button"
        app:layout_constraintEnd_toEndOf="@id/kumiwake_select_button"/>

    <com.google.android.material.button.MaterialButton
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/sekigime_select_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:backgroundTint="@color/green_title"
        android:text="@string/sekigime"
        android:textColor="@android:color/white"
        android:gravity="bottom|center"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/kumiwake_select_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_sekigime_icon"
        app:layout_constraintTop_toTopOf="@id/sekigime_select_button"
        app:layout_constraintBottom_toBottomOf="@id/sekigime_select_button"
        app:layout_constraintStart_toStartOf="@id/sekigime_select_button"
        app:layout_constraintEnd_toEndOf="@id/sekigime_select_button"/>

    <CheckBox
        android:id="@+id/duplicate_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/avoid_duplication"
        app:layout_constraintTop_toBottomOf="@id/kumiwake_select_button"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>