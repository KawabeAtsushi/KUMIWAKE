<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていない状態 -->
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <!-- 背景色 -->
            <gradient
                android:centerX="0.3"
                android:centerY="0.15"
                android:endColor="@color/red_unpressed"
                android:gradientRadius="120dp"
                android:startColor="#FFbbbb"
                android:type="radial" />
        </shape>
    </item>

    <!-- ボタンが押されている状態 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <!-- 背景色 -->
            <gradient
                android:centerX="0.3"
                android:centerY="0.15"
                android:endColor="@color/red_pressed"
                android:gradientRadius="120dp"
                android:startColor="#FFaaaa"
                android:type="radial" />
        </shape>
    </item>
</selector>