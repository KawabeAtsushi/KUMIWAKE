<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--
    Themes
     -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- アクションモード -->
        <item name="windowActionModeOverlay">true</item>
        <!-- プライマリカラー -->
        <item name="colorPrimary">#00897B</item>
        <!-- ステータスバーの背景色 -->
        <item name="android:colorPrimaryDark">@color/top_primary</item>
        <item name="android:fontFamily">@font/mplus</item>
    </style>

    <!-- Sekigime theme -->
    <style name="KumiwakeTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/red_title</item>
    </style>

    <!-- Sekigime theme -->
    <style name="SekigimeTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/green_title</item>
    </style>

    <!-- Others theme -->
    <style name="OthersTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/gray</item>
    </style>

    <!-- Member theme -->
    <style name="MemberTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/blue_title</item>
    </style>

    <!-- Member ChoiceMode theme. -->
    <style name="MemberChoiceTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/blue_title</item>
        <item name="actionModeCloseButtonStyle">@style/NoCloseButtonActionModeStyle</item>
    </style>

    <!-- Member ChoiceMode theme. -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimaryDark">@color/orange_title</item>
        <item name="actionBarStyle">@style/SettingsActionBarStyle</item>
    </style>

    <style name="SettingsActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/orange_title</item>
    </style>

    <style name="NoCloseButtonActionModeStyle">
        <item name="android:visibility">invisible</item>
    </style>

    <!--
    Buttons
    -->

    <style name="Button.Solid" parent="Widget.MaterialComponents.Button" />

    <style name="Button.Transparent" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.Icon" />

    <!-- Othersのボタン(透明) -->
    <!-- 角丸ボタン(透明) -->
    <style name="Button.Transparent.Rounded">
        <item name="cornerRadius">7dp</item>
    </style>
    <!-- アイコンボタン(透明) -->
    <style name="Button.Icon.Rounded">
        <item name="cornerRadius">7dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="iconSize">30dp</item>
    </style>
    <!-- 丸ボタン(透過) -->
    <!-- 角ボタン(Solid) -->
    <style name="Button.Solid.Rectangle">
        <!-- Inset(余白)はなぜか全方向指定しないと反映されない -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <!--
     模様
     -->

    <!-- Divider -->
    <style name="divider">
        <item name="android:background">@drawable/main_gradient</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <!--
     テキストスタイル
     -->

    <!-- fabのテキストスタイル -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>