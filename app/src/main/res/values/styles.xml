<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- アクションモード -->
        <item name="windowActionModeOverlay">true</item>
        <!-- プライマリカラー -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <!-- セカンダリカラー -->
        <item name="colorSecondary">@android:color/white</item>
        <!-- ステータスバーの背景色 -->
        <item name="android:colorPrimaryDark">@color/red_title</item>
    </style>

    <style name="KumiwakeTheme" parent="AppTheme">
        <!-- ステータスバーの背景色 -->
        <item name="android:colorPrimaryDark">@color/red_title</item>
    </style>

    <style name="SekigimeTheme" parent="AppTheme">
        <!-- ステータスバーの背景色 -->
        <item name="android:colorPrimaryDark">@color/green_title</item>
    </style>

</resources>