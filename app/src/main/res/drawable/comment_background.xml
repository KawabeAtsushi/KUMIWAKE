<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:endColor="#bbb"
                android:startColor="#ccc" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <padding
                android:bottom="10dp"
                android:left="13dp"
                android:right="13dp"
                android:top="10dp" />
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>

