<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Themes -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- アクションモード -->
        <item name="windowActionModeOverlay">true</item>
        <!-- プライマリカラー -->
        <item name="colorPrimary">#00897B</item>
        <!-- ステータスバーの背景色 -->
        <item name="android:colorPrimaryDark">@color/red_title</item>
        <item name="android:fontFamily">@font/mplus</item>
    </style>

    <!-- Sekigime theme -->
    <style name="SekigimeTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/green_title</item>
    </style>

    <!-- Member theme -->
    <style name="MemberTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/blue_title</item>
    </style>

    <!-- Member ChoiceMode theme. -->
    <style name="MemberChoiceTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/blue_title</item>
        <item name="actionModeCloseButtonStyle">@style/NoCloseButtonActionModeStyle</item>
    </style>

    <style name="NoCloseButtonActionModeStyle">
        <item name="android:visibility">invisible</item>
    </style>


    <!-- Buttons -->
    <style name="Button.Solid" parent="Widget.MaterialComponents.Button" />

    <style name="Button.Transparent" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.Icon" />

    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- 丸枠ボタン(透明) -->
    <style name="Button.Outline.History">
        <item name="cornerRadius">28dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/thin_gray</item>
    </style>
    <!-- 角丸ボタン(透明) -->
    <style name="Button.Transparent.Rounded">
        <item name="cornerRadius">7dp</item>
    </style>
    <!-- アイコンボタン(透明) -->
    <style name="Button.Icon.Rounded">
        <item name="cornerRadius">7dp</item>
    </style>
    <!-- 丸ボタン(透明) -->
    <style name="Button.Transparent.Circle">
        <item name="cornerRadius">100dp</item>
    </style>
    <!-- 角ボタン(Solid) -->
    <style name="Button.Solid.Rectangle">
        <!-- Inset(余白)はなぜか全方向指定しないと反映されない -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <!-- Divider -->
    <style name="divider">
        <item name="android:background">@drawable/main_gradient</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_height">2dp</item>
    </style>

</resources>