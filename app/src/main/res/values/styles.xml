<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
    <!-- アクションモード -->
    <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Kumiwake" parent="Theme.AppCompat.Light">
        <!-- タイトルバーの背景色 -->
        <item name="android:background">@color/red_title</item>
        <!-- タイトルバーの文字スタイル -->
        <item name="android:titleTextStyle">@style/titleTextStyleLight</item>
    </style>

    <style name="Member" parent="Theme.AppCompat.Light">
        <!-- タイトルバーの背景色 -->
        <item name="android:background">@color/blue_title</item>
        <!-- タイトルバーの文字スタイル -->
        <item name="android:titleTextStyle">@style/titleTextStyleLight</item>
        <!-- アクションモード -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Sekigime" parent="Theme.AppCompat.Light">
        <!-- タイトルバーの背景色 -->
        <item name="android:background">@color/green_title</item>
        <!-- タイトルバーの文字スタイル -->
        <item name="android:titleTextStyle">@style/titleTextStyleDark</item>
    </style>

    <style name="Setting" parent="Theme.AppCompat.Light">
        <!-- タイトルバーの背景色 -->
        <item name="android:background">@color/yellow_title</item>
        <!-- タイトルバーの文字スタイル -->
        <item name="android:titleTextStyle">@style/titleTextStyleDark</item>
    </style>

    <style name="titleTextStyleLight" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- タイトルバーの文字色 -->
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="titleTextStyleDark" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- タイトルバーの文字色 -->
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- setSupportActionbar()で設定しないと適用されない -->
        <item name="android:background">#ffffff</item>
        <item name="android:textColorPrimary">#0000ff</item>
        <item name="actionMenuTextColor">#00ff00</item>
    </style>

    <!-- hintのスタイル -->
    <style name="AppTheme.Design.TextAppearance.Design.Hint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/form_textSize</item><!-- 上の方のhintの表示サイズ -->
        <item name="android:textColor">#75ff0000</item><!--  上の方のhintの表示の色 -->
    </style>

    <style name="Topeka.TextAppearance.CategoryItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/category_item_text_size</item>
    </style>

</resources>

