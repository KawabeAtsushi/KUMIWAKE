<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていない状態 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 背景色 -->
            <corners android:radius="20dp" />
            <padding android:bottom="@dimen/top_button_expansion" android:left="@dimen/top_button_expansion" android:right="@dimen/top_button_expansion" android:top="@dimen/top_button_expansion" />
            <gradient android:angle="90" android:endColor="@color/red_unpressed" android:startColor="#FFbbbb" android:type="linear" />
        </shape>
    </item>

    <!-- ボタンが押されている状態 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 背景色 -->
            <corners android:radius="20dp" />
            <gradient android:angle="90" android:endColor="@color/red_pressed" android:startColor="#FFaaaa" android:type="linear" />
        </shape>
    </item>
</selector>