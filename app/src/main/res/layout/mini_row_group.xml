<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mini_group_icon"
        android:layout_width="@dimen/mini_icon_size"
        android:layout_height="@dimen/mini_icon_size"
        android:padding="@dimen/mini_row_padding"
        android:src="@drawable/ic_user_group"
        android:tint="@color/gray"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/mini_row_padding"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/memberNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:padding="@dimen/mini_row_padding"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>