<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されていない状態 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 背景色 -->
            <corners android:radius="20dp" />
            <gradient android:angle="90" android:endColor="@color/green_unpressed" android:startColor="#cfc" android:type="linear" />
        </shape>
    </item>

    <!-- ボタンが押されている状態 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 背景色 -->
            <corners android:radius="20dp" />
            <gradient android:angle="90" android:endColor="@color/green_pressed" android:startColor="#bfb" android:type="linear" />
        </shape>
    </item>
</selector>