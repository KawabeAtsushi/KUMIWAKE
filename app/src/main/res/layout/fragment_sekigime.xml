<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@drawable/img_sekigime_top"
    android:backgroundTint="@color/thin_white"
    android:backgroundTintMode="src_atop">

    <ImageButton
        android:id="@+id/hintForSekigime"
        android:layout_width="@dimen/hint_icon_size"
        android:layout_height="@dimen/hint_icon_size"
        android:contentDescription="@string/hint"
        android:src="@drawable/ic_help_outline_dark_24dp"
        android:background="@android:color/transparent"
        android:tint="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/background_anim1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/background_anim2"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="#9FFF"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/green_bubble" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/background_anim2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:scaleX="-1"
        app:layout_constraintBottom_toTopOf="@id/half_guideline"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/background_anim1"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="#9FFF"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/green_bubble" />

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/sekigime"
        android:src="@drawable/img_sekigime_icon"
        app:layout_constraintBottom_toTopOf="@id/half_guideline"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    後に記述したViewが前面に来る-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/half_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/normal_mode_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/top_normal_button"
        android:singleLine="true"
        android:text="@string/normal_mode"
        android:textColor="#ffffff"
        android:textSize="@dimen/main_button_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/quick_mode_button"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/half_guideline" />

    <ImageButton
        android:id="@+id/hintForNormalMode"
        android:layout_width="@dimen/hint_icon_size"
        android:layout_height="@dimen/hint_icon_size"
        android:contentDescription="@string/hint"
        android:src="@drawable/ic_help_outline_dark_24dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:tint="@color/gray"
        app:layout_constraintTop_toTopOf="@id/normal_mode_button"
        app:layout_constraintEnd_toEndOf="@+id/normal_mode_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quick_mode_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/top_quick_button"
        android:singleLine="true"
        android:text="@string/quick_mode"
        android:textColor="#ffffff"
        android:textSize="@dimen/main_button_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/normal_mode_button" />

    <ImageButton
        android:id="@+id/hintForQuickMode"
        android:layout_width="@dimen/hint_icon_size"
        android:layout_height="@dimen/hint_icon_size"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hint"
        android:elevation="10dp"
        android:tint="@color/gray"
        android:src="@drawable/ic_help_outline_dark_24dp"
        app:layout_constraintTop_toTopOf="@id/quick_mode_button"
        app:layout_constraintEnd_toEndOf="@id/quick_mode_button" />

</androidx.constraintlayout.widget.ConstraintLayout>